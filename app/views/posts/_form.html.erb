  <%= form_for @post do |f| %>
    <%=  f.hidden_field :user_id , :value => current_user.id %>
      <% if @post.errors.any? %>
        <div id="errors">
            <h2> 
                <%= pluralize(@post.errors.count, "error") %> 
                Prevented this post from saving
            </h2>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li> <%= msg %> </li>
                <% end %>
            </ul>
        </div>
      <% end %>
        <p>
            <%= f.label :title %> 
            <%= f.text_field :title %> 
        </p>

        <p>
            <%= f.label :body %> 
            <%= f.text_area :body %> 
        </p>

        <p>
            <%= f.submit %> 
        </p>
    <% end %>